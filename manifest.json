{
  "manifest_version": 3,
  "name": "AIA RJ 助攻神器(IG)",
  "version": "0.1.0",
  "description": "AI-powered conversation suggestions for Instagram Chat",
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "permissions": [
    "activeTab"
  ],
  
  "host_permissions": [
    "https://*.instagram.com/*",
    "https://api.deepseek.com/*",
    "https://coze-central-proxy.vercel.app/*"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "https://*.instagram.com/*"
      ],
      "js": ["guide.js", "content.js", "guide2.js", "guide3.js"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_title": "Instagram Chat AI Assistant",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "background": {
    "service_worker": "background.js"
  }
}